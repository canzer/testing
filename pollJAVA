<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Server Information Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .null-value {
      color: red; /* Change to your desired color */
    }
  </style>
</head>
<body>

<div class="container">
  <h1 class="mt-4 mb-4">Server Information Dashboard</h1>

  <div id="server-info"></div>

  <div class="mt-4" id="last-poll-info"></div>
</div>

<script>
  function updateServerInfo() {
    fetch('/server-info')
      .then(response => response.json())
      .then(data => {
        const serverInfoContainer = document.getElementById('server-info');
        serverInfoContainer.innerHTML = ''; // Clear previous content

        for (const group of data.groups) {
          const groupDiv = document.createElement('div');
          groupDiv.innerHTML = `<h4>${group.name}</h4><hr>`;
          for (const server of group.servers) {
            const serverCard = document.createElement('div');
            serverCard.classList.add('card', 'mb-4');
            serverCard.innerHTML = `
              <div class="card-body">
                <h5 class="card-title">${server.hostname}</h5>
                <ul class="list-group">
                  <li class="list-group-item ${server.uptime === null ? 'null-value' : ''}">Uptime: ${server.uptime || 'N/A'}</li>
                  <li class="list-group-item ${server.last_installed_update === null ? 'null-value' : ''}">Last Installed Update: ${server.last_installed_update || 'N/A'}</li>
                  <!-- Add more list items and conditionals as needed -->
                </ul>
              </div>
            `;
            groupDiv.appendChild(serverCard);
          }
          serverInfoContainer.appendChild(groupDiv);
        }

        // Update last polled info
        const lastPollInfo = document.getElementById('last-poll-info');
        const currentTime = new Date();
        lastPollInfo.innerHTML = `Last polled: ${currentTime.toLocaleTimeString()} (Next poll in 10 seconds)`;
      })
      .catch(error => console.error('Error:', error));
  }

  // Update server info every 10 seconds
  setInterval(updateServerInfo, 10000);

  // Initial update
  updateServerInfo();
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
